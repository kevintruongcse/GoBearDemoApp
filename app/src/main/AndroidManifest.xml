<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="kelvintruong.cse.gobeartechnicaltest">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:allowBackup="false"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/icon"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="GoogleAppIndexingWarning,UnusedAttribute"
            android:usesCleartextTraffic="true">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:screenOrientation="sensorPortrait"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".IntroActivity" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".ArticleListActivity" android:screenOrientation="sensorPortrait"/>
        <activity android:name=".ArticleDetailActivity" android:screenOrientation="sensorPortrait"/>
    </application>

</manifest>